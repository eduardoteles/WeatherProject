@{
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>This is our weather web application</p>
    <br>
    <div>
        @using (Html.BeginForm("WeatherAPIForm", "Home", FormMethod.Post))
        {
            <table class="table table-bordered table-hover table-striped table-responsive">
                <tr>
                    <td>Location name: </td>
                    <td>@Html.TextBoxFor(wm => wm.locationName,new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td>Today? </td>
                    <td>@Html.RadioButtonFor(wm => wm.Period,"Today", new { @checked="checked" })</td>
                </tr>
                <tr>
                    <td>Tomorrow? </td>
                    <td>@Html.RadioButtonFor(wm => wm.Period,"Tomorrow")</td>
                </tr>
                <tr>
                    <td>Next 7 days? </td>
                    <td>@Html.RadioButtonFor(wm => wm.Period,"Next 7 days")</td>
                </tr>
                <tr>
                    <td colspan="2"><button type="submit" class="btn btn-primary">Search</button></td>
                </tr>
            </table>
        }
    </div>
    <br>
    <br>
</div>
